@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="mb-4" style="color:#d4af37; font-weight:700; font-size:2rem;">Thanh toán</h2>

    @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        <div class="card shadow-sm border-0 p-4" style="border-top:4px solid #d4af37;">
            <div class="form-group mb-3">
                <label for="CustomerName" class="fw-bold" style="color:#000000; font-size:1.1rem;">Họ tên</label>
                <input type="text" class="form-control" id="CustomerName" name="CustomerName" required placeholder="Nhập họ tên của bạn" style="font-size:1rem; padding:0.75rem;" />
            </div>

            <div class="form-group mb-3">
                <label for="Address" class="fw-bold" style="color: #000000; font-size: 1.1rem;">Địa chỉ</label>
                <input type="text" class="form-control" id="Address" name="Address" required placeholder="Nhập địa chỉ giao hàng" style="font-size:1rem; padding:0.75rem;" />
            </div>

            <div class="form-group mb-3">
                <label for="Phone" class="fw-bold" style="color: #000000; font-size: 1.1rem;">Số điện thoại</label>
                <input type="tel" class="form-control" id="Phone" name="Phone" required placeholder="Nhập số điện thoại" style="font-size:1rem; padding:0.75rem;" />
            </div>

            <div class="form-group mb-3">
                <label for="Email" class="fw-bold" style="color: #000000; font-size: 1.1rem;">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" required placeholder="Nhập email của bạn" style="font-size:1rem; padding:0.75rem;" />
            </div>

            <button type="submit" class="btn btn-lg" style="background-color:#d4af37; color:#fff; font-weight:600; font-size:1.1rem; width:100%; padding:0.75rem;">Đặt hàng</button>
        </div>
    }
</div>

<style>
    /* Card hover subtle effect */
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 16px 32px rgba(212,175,55,0.2);
        transition: all 0.3s ease;
    }

    /* Input focus vàng */
    .form-control:focus {
        border-color: #d4af37;
        box-shadow: 0 0 0 0.2rem rgba(212,175,55,0.25);
    }

    /* Placeholder chữ nhỏ hơn, mờ nhẹ */
    ::placeholder {
        color: #a1863b;
        opacity: 0.7;
        font-size: 0.95rem;
    }

    /* Button hover */
    .btn:hover {
        background-color: #bfa14a;
        color: #fff;
    }
</style>
