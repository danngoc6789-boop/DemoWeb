@model List<DemoWeb.Models.CartItem>
@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 100px; min-height: 500px;">
    <h2 class="mb-4">Giỏ Hàng Của Bạn</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Size</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@Url.Content(item.ImagePath)"
                                     alt="@item.Name"
                                     style="width: 80px; height: 80px; object-fit: cover;"
                                     onerror="this.src='@Url.Content("~/Content/Images/no-image.jpg")'" />
                            </td>
                            <td>@item.Name</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Size))
                                {
                                    <span class="badge badge-secondary">@item.Size</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@item.Price.ToString("N0") VNĐ</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Minus", new { id = item.ProductId, size = item.Size })"
                                       class="btn btn-sm btn-outline-secondary">-</a>
                                    <span class="btn btn-sm btn-light disabled">@item.Quantity</span>
                                    <a href="@Url.Action("Plus", new { id = item.ProductId, size = item.Size })"
                                       class="btn btn-sm btn-outline-secondary">+</a>
                                </div>
                            </td>
                            <td><strong>@item.ThanhTien.ToString("N0") VNĐ</strong></td>
                            <td>
                                <a href="@Url.Action("Remove", new { id = item.ProductId, size = item.Size })"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-active">
                        <td colspan="5" class="text-right"><strong>Tổng cộng:</strong></td>
                        <td colspan="2"><strong class="text-danger">@ViewBag.TotalAmount.ToString("N0") VNĐ</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Tiếp tục mua hàng
            </a>
            <a href="@Url.Action("Checkout")" class="btn btn-primary btn-lg">
                <i class="fas fa-credit-card"></i> Thanh toán
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-shopping-cart" style="font-size: 3rem; margin-bottom: 20px;"></i>
            <h4>Giỏ hàng của bạn đang trống</h4>
            <p>Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm!</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary mt-3">
                <i class="fas fa-shopping-bag"></i> Mua sắm ngay
            </a>
        </div>
    }
</div>