<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    @RenderSection("Head", required: false)

    <style>
        :root {
            --brand-gold: #d4af37;
            --sidebar-width: 220px;
        }

        body {
            display: flex;
            min-height: 100vh;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: var(--sidebar-width);
            background: var(--brand-gold);
            color: #000;
            min-height: 100vh;
            padding: 20px 15px;
            position: fixed;
        }

            .sidebar h2 {
                font-size: 24px;
                margin-bottom: 30px;
            }

            .sidebar .nav-link {
                color: #000;
                font-weight: 600;
                margin-bottom: 10px;
                display: block;
                text-decoration: none;
                padding: 8px 10px;
                border-radius: 5px;
            }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: rgba(0,0,0,0.1);
                }

        .main-wrapper {
            margin-left: var(--sidebar-width);
            width: calc(100% - var(--sidebar-width));
            padding: 20px;
        }

        .header {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            border-bottom: 2px solid var(--brand-gold);
            padding-bottom: 10px;
        }

        .content-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 8px rgba(0,0,0,0.08);
            padding: 20px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <!-- SIDEBAR -->
    <div class="sidebar">

        <h2><strong>ADMIN</strong></h2>
        <a href="@Url.Action("Index", "TrangChu")" class="nav-link mb-3">
            <i class="fas fa-home"></i> Trang chủ
        </a>
        <a href="@Url.Action("Index", "Admin")" class="nav-link @(ViewBag.ActiveMenu == "Dashboard" ? "active" : "")"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="@Url.Action("Products", "Admin")" class="nav-link @(ViewBag.ActiveMenu == "Products" ? "active" : "")"><i class="fas fa-box"></i> Sản phẩm</a>
        <a href="@Url.Action("Orders", "Admin")" class="nav-link @(ViewBag.ActiveMenu == "Orders" ? "active" : "")"><i class="fas fa-shopping-cart"></i> Đơn hàng</a>
        <a href="@Url.Action("GoldPrices", "Admin")" class="nav-link @(ViewBag.ActiveMenu == "GoldPrices" ? "active" : "")"><i class="fas fa-coins"></i> Giá vàng</a>
        <a href="@Url.Action("Reports", "Admin")" class="nav-link @(ViewBag.ActiveMenu == "Reports" ? "active" : "")"><i class="fas fa-chart-bar"></i> Thống kê</a>
        <a href="@Url.Action("Supports", "Admin")" class="nav-link @(ViewBag.ActiveMenu == "Supports" ? "active" : "")"><i class="fas fa-headset"></i> CSKH</a>
        <!-- Nút Cài đặt + Dropdown ở dưới cùng -->
        <div class="mb-3">
            <div class="dropdown">
                <button class="btn btn-outline-dark w-100 dropdown-toggle" type="button" id="settingsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-cog"></i> Cài đặt
                </button>
                <ul class="dropdown-menu w-100" aria-labelledby="settingsDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("Register", "Account")"><i class="fas fa-user-plus"></i> Tạo tài khoản admin</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- MAIN -->
    <main class="main-wrapper">
        <div class="header">@ViewBag.Title</div>
        @RenderSection("Breadcrumb", required: false)
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
