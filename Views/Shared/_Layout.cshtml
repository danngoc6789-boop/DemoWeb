@using System.Linq
@using System.Collections.Generic
@using DemoWeb.Models

@{
    Layout = null;

    // Lấy số lượng sản phẩm trong giỏ
    var cartCount = 0;
    if (Session["Cart"] != null)
    {
        var cart = (List<CartItem>)Session["Cart"];
        cartCount = cart.Sum(x => x.Quantity);
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - D&T JEWELRY</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

    <!-- CSS riêng cho shop -->
    <link rel="stylesheet" href="~/Content/site-shop.css" />

    @RenderSection("Head", required: false)
</head>
<body class="layout-wrapper">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top nav-jewelry">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Trangchu")">
                <span class="brand-main">D&amp;T <span class="brand-accent">JEWELRY</span></span>
                <span class="since">SINCE 2025</span>
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#mainNav" aria-controls="mainNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">@Html.ActionLink("Trang chủ", "Index", "Trangchu", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Sản phẩm", "Index", "Product", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Bảng giá vàng", "BangGia", "GoldPrice", null, new { @class = "nav-link" })</li>
                    <li class="nav-item d-flex align-items-center">
                        @Html.ActionLink("Giỏ hàng", "Index", "Cart", null, new { @class = "nav-link" })
                        @if (cartCount > 0)
                        {
                            <span class="cart-badge">@cartCount</span>
                        }
                    </li>
                    <li class="nav-item">@Html.ActionLink("Liên hệ", "Contact", "Trangchu", null, new { @class = "nav-link" })</li>

                    <!-- Tài khoản -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Tài Khoản
                        </a>
                        <div class="dropdown-menu" aria-labelledby="accountDropdown">
                            @if (Request.IsAuthenticated)
                            {
                                if (User.IsInRole("Admin"))
                                {
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Admin")">Quản lý Admin</a>
                                    <div class="dropdown-divider"></div>
                                    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @class = "d-inline" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                        </button>
                                    }
                                }
                                else
                                {
                                    <span class="dropdown-item-text">
                                        @{
                                            string full = Session["FullName"]?.ToString() ?? "";
                                            string name = full.Split(' ').Last();
                                        }
                                        <strong>Chào @name</strong>
                                    </span>
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Đơn hàng của tôi", "Index", "CustomerOrder", null, new { @class = "dropdown-item" })
                                    <div class="dropdown-divider"></div>
                                    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @class = "d-inline" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                        </button>
                                    }
                                }
                            }
                            else
                            {
                                @Html.ActionLink("Đăng nhập", "Login", "Account", null, new { @class = "dropdown-item" })
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Đăng ký", "Register", "Account", null, new { @class = "dropdown-item" })
                            }
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="main-wrapper flex-fill">
        <div class="container">
            @RenderSection("Breadcrumb", required: false)
            <div class="content-card">
                @RenderBody()
            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="jewerly-footer bg-light mt-auto py-4">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-3 mb-4">
                    <div class="footer-brand">D&T JEWELRY</div>
                    <div class="footer-desc">Vàng 24K - Trang sức cao cấp - Cam kết chuẩn tuổi vàng. Thu mua / thu đổi minh bạch, giá tốt.</div>
                </div>
                <div class="col-sm-6 col-md-3 mb-4">
                    <div class="footer-title">Liên hệ</div>
                    <div>Hotline: 1900 1011</div>
                    <div>Zalo: 0522 945 087</div>
                    <div>Email: DTjewerly2025@gmail.com</div>
                    <div>161 ĐHT 02 Phường Đông Hưng Thuận Quận 12 TP Hồ Chí Minh</div>
                </div>
                <div class="col-sm-6 col-md-3 mb-4">
                    <div class="footer-title">Cam kết</div>
                    <div>✔ Vàng đủ tuổi, chuẩn tuổi</div>
                    <div>✔ Hóa đơn rõ ràng</div>
                    <div>✔ Thu đổi linh hoạt</div>
                    <div>✔ Bảo hành làm sáng trọn đời</div>
                </div>
                <div class="col-sm-6 col-md-3 mb-4">
                    <div class="footer-title">Hỗ trợ</div>
                    <div><a href="@Url.Action("ThuDoi","Policy")">Chính sách thu đổi</a></div>
                    <div><a href="@Url.Action("BaoHanh","Policy")">Chính sách bảo hành</a></div>
                    <div><a href="@Url.Action("GiaoHang","Policy")">Chính sách giao hàng</a></div>
                    <div><a href="@Url.Action("Index","MeasureRingSize")">Cách đo ni tay</a></div>
                    <div><a href="@Url.Action("QA","Policy")">Câu hỏi thường gặp</a></div>
                </div>
            </div>
            <div class="copyright-line text-center mt-3">
                © @DateTime.Now.Year D&T JEWELRY. All rights reserved.
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    @if (System.IO.File.Exists(Server.MapPath("~/Scripts/cart.js")))
    {
        <script src="~/Scripts/cart.js"></script>
    }

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main.main-wrapper {
            flex: 1;
            padding-top: 80px;
        }

        footer.jewerly-footer {
            margin-top: auto;
        }

        .row > [class*="col-"] {
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 24px 48px rgba(0,0,0,0.15);
            transition: all 0.3s ease;
        }
    </style>

    @RenderSection("Scripts", required: false)
</body>
</html>
