@{
    ViewBag.Title = "Tổng quan" ;
    ViewBag.ActiveMenu = "Tổng quan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- MENU QUẢN LÝ NHANH -->
    <div class="row mb-4">
        @{
            var menuItems = new[]
            {
                
                new { Title="Sản phẩm", Icon="fa-box", Color="primary", Link="Products" },
                new { Title="Đơn hàng", Icon="fa-shopping-cart", Color="success", Link="Orders" },
                new { Title="Cập nhật giá vàng", Icon="fa-coins", Color="warning", Link="GoldPrices" },
                new { Title="Thống kê", Icon="fa-chart-bar", Color="info", Link="Reports" },
                new { Title="CSKH", Icon="fa-headset", Color="secondary", Link="Supports" }
            };
        }
        @foreach (var item in menuItems)
        {
            <div class="col-md-2 mb-3">
                <a href="@Url.Action(item.Link, "Admin")" class="btn btn-@item.Color btn-lg w-100 py-4 d-flex flex-column align-items-center justify-content-center">
                    <i class="fas @item.Icon fa-2x mb-2"></i>
                    <span>@item.Title</span>
                </a>
            </div>
        }
    </div>

    <!-- THỐNG KÊ NGẮN GỌN -->
    <div class="row mb-4">
        @{
            var stats = new[]
            {
                new { Title="Tổng sản phẩm", Value=ViewBag.TotalProducts ?? 0, Icon="fa-box", Color="primary", Link="Products"},
                new { Title="Tổng đơn hàng", Value=ViewBag.TotalOrders ?? 0, Icon="fa-shopping-cart", Color="success", Link="Orders"},
                new { Title="Đơn hôm nay", Value=ViewBag.TodayOrders ?? 0, Icon="fa-clock", Color="warning", Link="Orders"},
                new { Title="Doanh thu tháng", Value=(ViewBag.MonthRevenue ?? 0).ToString("N0")+"đ", Icon="fa-dollar-sign", Color="info", Link="Reports"}
            };
        }
        @foreach (var s in stats)
        {
            <div class="col-xl-3 col-md-6 mb-3">
                <div class="card border-start border-5 border-@s.Color shadow h-100 py-2">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase fw-bold text-@s.Color mb-1">@s.Title</div>
                            <div class="h5 fw-bold text-gray-800">@s.Value</div>
                        </div>
                        <i class="fas @s.Icon fa-2x text-gray-300"></i>
                    </div>
                    <a href="@Url.Action(s.Link, "Admin")" class="btn btn-@s.Color btn-sm w-100 mt-2">Xem chi tiết</a>
                </div>
            </div>
        }
    </div>

    <!-- BẢNG ĐƠN HÀNG GẦN ĐÂY -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0"><i class="fas fa-list"></i> Đơn hàng gần đây</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentOrders != null && ViewBag.RecentOrders.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã ĐH</th>
                                        <th>Khách hàng</th>
                                        <th>SĐT</th>
                                        <th>Ngày đặt</th>
                                        <th>Tổng tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in ViewBag.RecentOrders)
                                    {
                                        <tr>
                                            <td><a href="@Url.Action("OrderDetail","Admin", new {id=order.Id})" class="fw-bold">@order.OrderCode</a></td>
                                            <td>@order.CustomerName</td>
                                            <td>@order.Phone</td>
                                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="fw-bold">@order.TotalAmount.ToString("N0")đ</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="@Url.Action("Orders","Admin")" class="btn btn-primary w-100 mt-3"><i class="fas fa-arrow-right"></i> Xem tất cả đơn hàng</a>
                    }
                    else
                    {
                        <p class="text-center text-muted py-4">Chưa có đơn hàng nào</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
