@model DemoWeb.Models.Product
@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> CHỈNH SỬA SẢN PHẨM</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.ProductId)
                        @Html.HiddenFor(m => m.Images)
                        @Html.HiddenFor(m => m.CreatedDate)

                        <!-- Giống Create.cshtml nhưng thay đổi:
                             - Card header: bg-warning
                             - Title: "CHỈNH SỬA SẢN PHẨM"
                             - Button: "Cập nhật sản phẩm"
                             - Hiển thị ảnh hiện tại nếu có
                        -->

                        <div class="row">
                            <div class="col-md-8">
                                <!-- Các trường giống Create.cshtml -->
                                <div class="form-group">
                                    <label class="font-weight-bold">Tên sản phẩm <span class="text-danger">*</span></label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                                </div>

                                <div class="form-group">
                                    <label class="font-weight-bold">Mô tả</label>
                                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "4" })
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="font-weight-bold">Danh mục</label>
                                            @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="font-weight-bold">Giá (VNĐ)</label>
                                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="font-weight-bold">Số lượng</label>
                                            @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control", type = "number" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="font-weight-bold">Trọng lượng (g)</label>
                                            @Html.TextBoxFor(m => m.Weight, new { @class = "form-control", type = "number", step = "0.01" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="font-weight-bold">Chất liệu</label>
                                            @Html.TextBoxFor(m => m.Material, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="font-weight-bold">Hình ảnh</label>
                                    <div class="custom-file">
                                        <input type="file" name="imageFile" class="custom-file-input" id="imageFile" accept="image/*" onchange="previewImage(this)">
                                        <label class="custom-file-label" for="imageFile">Chọn hình ảnh mới...</label>
                                    </div>
                                    <div class="mt-3 text-center">
                                        <img id="imagePreview"
                                             src="@(string.IsNullOrEmpty(Model.Images) ? Url.Content("~/Content/images/no-image.png") : Model.Images)"
                                             alt="Preview"
                                             class="img-thumbnail"
                                             style="max-width: 100%; max-height: 300px;" />
                                    </div>
                                    <small class="text-muted">Để trống nếu không muốn thay đổi ảnh</small>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-lg text-white">
                                <i class="fas fa-save"></i> Cập nhật sản phẩm
                            </button>
                            <a href="@Url.Action("Products")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imagePreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
                var fileName = input.files[0].name;
                $(input).next('.custom-file-label').html(fileName);
            }
        }
    </script>
}