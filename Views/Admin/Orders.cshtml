@model IEnumerable<DemoWeb.Models.Order>

@{
    
    ViewBag.ActiveMenu = "Orders";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="d-flex justify-content-between align-items-center mb-3">
    
    <div>
        <a href="@Url.Action("Index","Admin")" class="btn btn-outline-secondary me-2">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
       
    </div>
</div>
<div>
    <h2>
        <i class="fas fa-shopping-cart"></i> Quản lý đơn hàng
    </h2>

</div>
<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Mã đơn hàng</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderCode</td>
                    <td>@order.CustomerName</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@order.TotalAmount.ToString("N0")đ</td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            using (Html.BeginForm("UpdateStatus", "Admin", FormMethod.Post, new { @class = "d-flex flex-column" }))
                            {
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="orderId" value="@order.Id" />
                                <select name="status" class="form-select form-select-sm mb-1">
                                    <option value="Chưa xử lý" @(order.Status == "Chưa xử lý" ? "selected" : "")>Chưa xử lý</option>
                                    <option value="Đang xử lý" @(order.Status == "Đang xử lý" ? "selected" : "")>Đang xử lý</option>
                                    <option value="Đang giao" @(order.Status == "Đang giao" ? "selected" : "")>Đang giao</option>
                                    <option value="Đã giao" @(order.Status == "Đã giao" ? "selected" : "")>Đã giao</option>
                                    <option value="Hủy" @(order.Status == "Hủy" ? "selected" : "")>Hủy</option>
                                </select>
                                <button type="submit" class="btn btn-sm btn-primary">Cập nhật</button>
                            }
                        }
                        else
                        {
                            <span class="badge bg-secondary">@order.Status</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("OrderDetail", "Admin", new { id = order.Id })" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i> Chi tiết
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
