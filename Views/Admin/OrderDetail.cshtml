@model DemoWeb.Models.Order
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Breadcrumb {
    <div class="breadcrumb-box">
        <a href="@Url.Action("Index","Admin")">Trang Quản Trị</a>
        <span class="breadcrumb-sep">/</span>
        <a href="@Url.Action("Orders","Admin")">Quản Lý Đơn Hàng</a>
        <span class="breadcrumb-sep">/</span>
        <span>Quản Lý Đơn Hàng Chi Tiết</span>
    </div>
}
@section Head {
    <link href="~/Content/AdminClient.css" rel="stylesheet" />
}
<h2>Chi tiết đơn hàng @Model.OrderCode</h2>

<p>Khách hàng: @Model.CustomerName</p>
<p>Ngày đặt: @Model.OrderDate.ToString("dd/MM/yyyy")</p>
<p>Trạng thái: @Model.Status</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@(item.UnitPrice.HasValue ? item.UnitPrice.Value.ToString("C") : "-")</td>
                <td>@item.Quantity</td>
                <td>@(item.UnitPrice.HasValue ? (item.UnitPrice.Value * item.Quantity).ToString("C") : "-")</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Tổng: @Model.TotalAmount.ToString("C")</strong></p>
