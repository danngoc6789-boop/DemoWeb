@model DemoWeb.Models.Order
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết đơn hàng @Model.OrderCode</h2>

<p>Khách hàng: @Model.CustomerName</p>
<p>Ngày đặt: @Model.OrderDate.ToString("dd/MM/yyyy")</p>
<p>Trạng thái: @Model.Status</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@(item.UnitPrice * item.Quantity).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Tổng: @Model.TotalAmount.ToString("C")</strong></p>
