@model DemoWeb.Models.SupportRequest
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Chi tiết yêu cầu hỗ trợ";

    var phoneClean = Model.Phone?.Replace(" ", "").Replace("-", "").Replace(".", "");
    var phoneForZalo = phoneClean?.StartsWith("0") == true ? "84" + phoneClean.Substring(1) : phoneClean;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="@Url.Action("Supports","Admin")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>


    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0"> #@Model.Id</h4>
            <span class="badge @GetStatusClass(Model.Status) p-2">@Model.Status</span>
        </div>
        <div class="card-body">

            <div class="row mb-2">
                <div class="col-md-3 font-weight-bold">Khách hàng:</div>
                <div class="col-md-9">@Model.CustomerName</div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3 font-weight-bold">Điện thoại:</div>
                <div class="col-md-9">
                    <a href="tel:@phoneClean">@Model.Phone</a>

                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Email))
            {
                <div class="row mb-2">
                    <div class="col-md-3 font-weight-bold">Email:</div>
                    <div class="col-md-9">
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    </div>
                </div>
            }

            <div class="row mb-2">
                <div class="col-md-3 font-weight-bold">Ngày gửi:</div>
                <div class="col-md-9">
                    @Model.CreatedAt.ToString("HH:mm dd/MM/yyyy")
                    <small class="text-muted">(@GetTimeAgo(Model.CreatedAt))</small>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Nội dung:</div>
                <div class="col-md-9">
                    <div class="border rounded p-2 bg-light">@Model.Message</div>
                </div>
            </div>

            <!-- Action buttons -->
            <div class="d-flex flex-wrap gap-2">
                @if (Model.Status != "Đã xử lý")
                {
                    using (Html.BeginForm("UpdateSupportStatus", "Admin", new { id = Model.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="status" value="Đang xử lý" />
                        <button class="btn btn-info btn-sm"><i class="fa fa-spinner"></i> Đang xử lý</button>
                    }

                    using (Html.BeginForm("UpdateSupportStatus", "Admin", new { id = Model.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="status" value="Đã xử lý" />
                        <button class="btn btn-success btn-sm"><i class="fa fa-check"></i> Hoàn thành</button>
                    }
                }

                <a href="tel:@phoneClean" class="btn btn-primary btn-sm"><i class="fa fa-phone"></i> Gọi điện</a>
                <a href="https://zalo.me/@phoneForZalo" target="_blank" class="btn btn-info btn-sm"><i class="fa fa-comments"></i> Chat Zalo</a>


                <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete()"><i class="fa fa-trash"></i> Xóa</button>
            </div>

            @using (Html.BeginForm("DeleteSupport", "Admin", new { id = Model.Id }, FormMethod.Post, new { id = "deleteForm", style = "display:none;" }))
            {
                @Html.AntiForgeryToken()
            }

        </div>
    </div>

</div>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm('Bạn có chắc chắn muốn xóa yêu cầu này? Hành động không thể hoàn tác.')) {
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}

@functions {
    string GetStatusClass(string status) => status switch
    {
        "Chờ xử lý" => "badge bg-warning text-dark",
        "Đang xử lý" => "badge bg-info text-white",
        "Đã xử lý" => "badge bg-success text-white",
        _ => "badge bg-secondary text-white"
    };

    string GetTimeAgo(DateTime dt)
    {
        var ts = DateTime.Now - dt;
        if (ts.TotalMinutes < 1) return "vừa xong";
        if (ts.TotalMinutes < 60) return $"{(int)ts.TotalMinutes} phút trước";
        if (ts.TotalHours < 24) return $"{(int)ts.TotalHours} giờ trước";
        if (ts.TotalDays < 7) return $"{(int)ts.TotalDays} ngày trước";
        if (ts.TotalDays < 30) return $"{(int)(ts.TotalDays / 7)} tuần trước";
        if (ts.TotalDays < 365) return $"{(int)(ts.TotalDays / 30)} tháng trước";
        return dt.ToString("dd/MM/yyyy");
    }
}
