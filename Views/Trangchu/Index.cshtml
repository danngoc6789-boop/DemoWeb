@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const slideshows = document.querySelectorAll('.slideshow-hover-card');

            slideshows.forEach(card => {
                const slides = card.querySelectorAll('.jewelry-slide');
                let currentIndex = 0;

                // Đảm bảo chỉ slide đầu hiển thị ban đầu
                slides.forEach((s, i) => {
                    s.style.display = i === 0 ? "block" : "none";
                });

                // Tự động chuyển slide
                setInterval(() => {
                    slides[currentIndex].style.display = "none";
                    currentIndex = (currentIndex + 1) % slides.length;
                    slides[currentIndex].style.display = "block";
                }, 2000); // đổi ảnh mỗi 2 giây
            });
        });
    </script>
}