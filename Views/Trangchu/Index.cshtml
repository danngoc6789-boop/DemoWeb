@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumb {
    <div class="breadcrumb-box">
        TRANG CHỦ
    </div>
}
@if (TempData["LoginMessage"] != null)
{
    <div id="loginAlert" class="alert alert-success alert-dismissible fade show" role="alert" style="margin-bottom: 20px;">
        <strong>✓</strong> @TempData["LoginMessage"]
        
    </div>

    <script>
        setTimeout(function () {
            var alert = document.getElementById('loginAlert');
            if (alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 5000); // Tự động tắt sau 5 giây
    </script>
}
