@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumb {
    <div class="breadcrumb-box">
        TRANG CHỦ
    </div>
}

<!-- HERO / GIỚI THIỆU -->
<div class="row align-items-start" style="margin-bottom:24px;">

    <!-- Text mô tả thương hiệu -->
    <div class="col-md-8">
        <div class="hero-eyebrow">
            D&T JEWELRY
        </div>

        <div class="hero-headline">
            Trang sức vàng tinh xảo.
            <span class="hl-gold">Chuẩn tuổi.</span>
            <span class="hl-gold">Chuẩn đẳng cấp.</span>
        </div>

        <div class="hero-subtitle">
            Nhẫn cưới 24K, lắc tay, dây chuyền và charm phong thủy.
            Chúng tôi cam kết tuổi vàng rõ ràng, hóa đơn minh bạch và chính sách thu đổi tốt.
        </div>

        <div class="hero-actions" style="display:flex; flex-wrap:wrap; column-gap:8px; row-gap:8px;">
            <a href="@Url.Action("Index","Product")"
               class="btn-round-black">
                Mua ngay
            </a>

            <a href="@Url.Action("BangGia","GoldPrice")"
               class="btn-round-outline-gold">
                Bảng giá vàng hôm nay
            </a>
        </div>
    </div>

    <!-- Khung "sản phẩm nổi bật" bên phải -->
    <div class="col-md-4" style="margin-top:24px;">
        <div class="product-card" style="margin-bottom:0;">
            <div class="product-img-fake">
                Hình sản phẩm nổi bật<br />
                (ví dụ: nhẫn 24K)
            </div>

            <div class="product-name">
                Nhẫn trơn 24K
            </div>
            <div class="product-desc">
                Tinh luyện, tuổi vàng chuẩn
            </div>
        </div>
    </div>

</div>

<hr style="border-top:1px solid var(--border-soft); margin:24px 0;" />

<!-- SẢN PHẨM NỔI BẬT -->
<span class="section-heading">
    Sản phẩm nổi bật
</span>

<div class="row">

    <!-- Sản phẩm 1 -->
    <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="product-card">
            <div class="product-img-fake">
                <div class="product-img">


                    <img src="~/Content/Images/Nhan/nu1/1.png" />

                    <img src="~/Content/Images/Nhan/nu1/3.png" />
                    <img src="~/Content/Images/Nhan/nu1/3.png" />
                    <img src="~/Content/Images/Nhan/nu1/4.jpg" />
                    <img src="~/Content/Images/Nhan/nu1/5.jpg" />
                    <img src="~/Content/Images/Nhan/nu1/6.jpg" />
                    <img src="~/Content/Images/Nhan/nu1/2.png" class="img-hover" />


                </div>
                 
            </div>



                <div class="product-name">
                    Nhẫn Vàng Trắng Kim Cương Nữ 18K
                </div>
                <div class="product-desc">
                    Thanh Lịch, Tinh Tế
                </div>

                <div class="product-price">
                    169.500.000₫
                </div>

                <a href="@Url.Action("Details","Product", new { id = 1 })"
                   class="btn-product-detail">
                    Xem chi tiết
                </a>
            
        </div>
    </div>

    <!-- Sản phẩm 2 -->
    <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="product-card">
            <div class="product-img">
                <img src="~/Content/Images/Lac/nu1/1.png" />

                <img src="~/Content/Images/Lac/nu1/3.jpg" />
                <img src="~/Content/Images/Lac/nu1/4.jpg" />
                <img src="~/Content/Images/Lac/nu1/5.jpg" />
                <img src="~/Content/Images/Lac/nu1/6.jpg" />
                <img src="~/Content/Images/Lac/nu1/7.jpg" />
                <img src="~/Content/Images/Lac/nu1/2.png" class="img-hover" />
            </div>

            <div class="product-name">
                Lắc tay vàng trắng nữ 24K
            </div>
            <div class="product-desc">
                Dịu dàng, sang trọng
            </div>

            <div class="product-price">
                20.900.000₫
            </div>

            <a href="@Url.Action("Details","Product", new { id = 2 })"
               class="btn-product-detail">
                Xem chi tiết
            </a>
        </div>
    </div>

    <!-- Sản phẩm 3 -->
    <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="product-card">
            <div class="product-img">
                <img src="~/Content/Images/DayChuyen/N1/1.png" />

                <img src="~/Content/Images/DayChuyen/N1/3.png" />
                <img src="~/Content/Images/DayChuyen/N1/4.jpg" />
                <img src="~/Content/Images/DayChuyen/N1/5.jpg" />
                <img src="~/Content/Images/DayChuyen/N1/6.jpg" />
                <img src="~/Content/Images/DayChuyen/N1/2.png" class="img-hover" />
            </div>
            <div class="product-name">
                Dây chuyền vàng 18K nam
            </div>
            <div class="product-desc">
                Thiết kế tối giản, thanh lịch
            </div>

            <div class="product-price">
                Liên hệ báo giá
            </div>

            <a href="@Url.Action("Details","Product", new { id = 3 })"
               class="btn-product-detail">
                Xem chi tiết
            </a>
        </div>
    </div>

    <!-- Bạn có thể thêm sản phẩm 4 nếu muốn lấp hàng đủ 4 cột -->
    <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="product-card">
            <div class="product-img">
                <img src="~/Content/Images/Kieng/5/1.png" />
                <img src="~/Content/Images/Kieng/5/3.png"   />
                <img src="~/Content/Images/Kieng/5/4.jpg" class="img-hover" />
                <img src="~/Content/Images/Kieng/5/2.png" />


            </div>

            <div class="product-name">
                Kiềng vàng 24K nữ
            </div>
            <div class="product-desc">
                Sang trọng, quý phái
            </div>

            <div class="product-price">
                187.000.000₫
            </div>

            <a href="@Url.Action("Details","Product", new { id = 4 })"
               class="btn-product-detail">
                Xem chi tiết
            </a>
        </div>
    </div>



    <hr style="border-top:1px solid var(--border-soft); margin:24px 0;" />

    <!-- DỊCH VỤ & CAM KẾT -->
    <span class="section-heading">
        Dịch vụ & cam kết
    </span>

    <div class="row">

    <div class="col-md-4" style="margin-bottom:16px;">
        <div class="service-block-title">
            Chuẩn tuổi vàng
        </div>
        <div class="service-block-desc">
            Mỗi sản phẩm đều có thông tin tuổi vàng rõ ràng và hóa đơn minh bạch.
        </div>
    </div>

    <div class="col-md-4" style="margin-bottom:16px;">
        <div class="service-block-title">
            Thu đổi linh hoạt
        </div>
        <div class="service-block-desc">
            Hỗ trợ thu đổi trang sức cũ với giá tốt, rõ ràng, dễ hiểu.
        </div>
    </div>

    <div class="col-md-4" style="margin-bottom:16px;">
        <div class="service-block-title">
            Bảo hành sáng bóng
        </div>
        <div class="service-block-desc">
            Lau sạch làm sáng trọn đời tại cửa hàng, miễn phí dịch vụ cơ bản.
        </div>
    </div>

    </div>
 </div>
